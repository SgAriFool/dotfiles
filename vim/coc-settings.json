{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cc",
        "cpp",
        "c++",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        "compile_commands.json",
        ".git/",
        ".hg/",
        ".vscode",
        ".vim/"
      ],
      "initializationOptions": {
        "highlight": {
          "lsRanges": true
        },
        "cache": {
          "directory": "/tmp/ccls"
        },
        // "gdb": {
        //   "resourceDir": "/usr/bin/gdb"
        // },
        "completion": {
          "detailedLable": true,
          "placeholder": true
        },
        "index": {
          "onChange": false,
          "initialNoLinkage": true,
          "threads": 2
        },
        "compilationDatabaseDirectory": ".vscode/"
      }
    }
  }
}
